<?xml version="1.0" encoding="utf-8"?>
<WorkItemQuery Version="1">
  <Wiql>
    SELECT [System.Id], 
           [System.Title], 
           [System.AssignedTo], 
           [System.State], 
           [System.WorkItemType], 
           [System.CreatedDate]
      FROM WorkItems 
     WHERE [System.TeamProject] = @project 
       AND [System.WorkItemType] = 'Problema' 
       AND [System.State] &lt;&gt; 'Cerrado' 
  ORDER BY [System.CreatedDate]
  </Wiql>
</WorkItemQuery>